<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_app"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/notification_icon"
            android:contentDescription="App Icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Verification"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/total_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your 6-digit OTP code is:"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:textColor="@color/pending_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/otp_digit_1"
            android:text="1"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle"/>

        <TextView
            android:id="@+id/otp_digit_2"
            android:text="2"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle" />

        <TextView
            android:id="@+id/otp_digit_3"
            android:text="3"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle" />

        <TextView
            android:id="@+id/otp_digit_4"
            android:text="4"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle" />

        <TextView
            android:id="@+id/otp_digit_5"
            android:text="5"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle" />

        <TextView
            android:id="@+id/otp_digit_6"
            android:text="6"
            android:textAppearance="@style/CustomToolbarTitleText"
            style="@style/OtpDigitStyle" />

    </LinearLayout>

</LinearLayout>